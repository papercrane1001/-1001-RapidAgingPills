<Defs>
	<ThingDef ParentName="DrugPillBase">
		<defName>RapidAgingPill</defName>
		<label>rapid aging pill</label>
		<description>A pill which ages the subject by one year.  Very disconcerting to experience.  Not recommended for human consumption.</description>
		<graphicData>
			<texPath>Things/Drugs/RapidAgingPill</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<socialPropernessMatters>false</socialPropernessMatters>
		<rotatable>false</rotatable>
		<stackLimit>10</stackLimit>
		<statBases>
			<MarketValue>500</MarketValue>
			<Mass>0.01</Mass>
			<Flammability>0.7</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<WorkToMake>1000</WorkToMake>
		</statBases>
		<techLevel>Ultra</techLevel>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<ingestSound>MechSerumUsed</ingestSound>
			<outcomeDoers>
				<li Class="RapidAgingPills.IngestionOutcomeDoer_RapidAging"></li>
			</outcomeDoers>
		</ingestible>
		<recipeMaker>
			<researchPrerequisite>ResearchProjects_AgingPill</researchPrerequisite>
			<recipeUsers>
				<li>DrugLab</li>
			</recipeUsers>
			<skillRequirements>
				<Medicine>8</Medicine>
				<Intellectual>8</Intellectual>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<Neutroamine>10</Neutroamine>
			<MedicineHerbal>2</MedicineHerbal>
		</costList>
		<comps>
